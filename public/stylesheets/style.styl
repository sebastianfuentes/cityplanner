html,
body
	margin 0
	padding 0
	font-size 16px
	font-family Helvetica
	display block
	width 100%
	height 100%
	overflow hidden
.container
	display block
	height 100%
	&:first-of-type
		padding 0
	.map
		width 100%
		height 100%
		position relative
		display block
		i
			display block
			color #009688
		.location-inside
				color rgb(25,25,25)
				font-family "Roboto", "Helvetica"
				font-size 1em
				padding 5px
		.location-outside
			display block
			background #fff
			border 2px solid #fff
			border-radius 3px
			cursor pointer
			margin 22px 8px
			text-align center
			&:hover
				background #00796B
				border-color #00796B
				transition all .3s ease
			&:hover i
				color #fff
				transition all .3s ease
	.controls
		display block
		background #fff
		text-align center
		padding 1em 0
		span
			color #444
			font-weight normal
			&.title
				font-weight bold
		.range
			width 100%
			padding-top 1em
			span
				vertical-align middle
			#inner-hours
				display block
				width 100%
	.pick-container
		display block
		padding 0 1em 2em
		overflow-y auto
		.title
			font-size .9em
			display block
		.time
			font-size .8em
		.option
			border-bottom 1px solid #ddd
input
	margin 0 1em
	min-width 10em
	&:focus
		outline none
input[type=range]
	-webkit-appearance none
	border 1px solid white

input[type=range]::-webkit-slider-runnable-track
	width 100%
	height 5px
	background #ddd
	border none
	border-radius 3px

input[type=range]::-webkit-slider-thumb
	-webkit-appearance none
	border 1px solid #ddd
	height 16px
	width 16px
	border-radius 50%
	background #fff
	margin-top -5px

input[type=range]:focus
	outline none
	&::-webkit-slider-runnable-track
		background #ccc
	&::-ms-fill-lower
		background #888
	&::-ms-fill-upper
		background #ccc

input[type=range]::-moz-range-track
	width 300px
	height 5px
	background #ddd
	border 1px solid #ddd
	border-radius 3px

input[type=range]::-moz-range-thumb
	border none
	height 16px
	width 16px
	border-radius 50%
	background #fff

input[type=range]:-moz-focusring
	outline 1px solid white
	outline-offset -1px

input[type=range]::-ms-track
	width 300px
	height 5px
	background transparent
	border-color transparent
	border-width 6px 0
	color transparent

input[type=range]::-ms-fill-lower
	background #777
	border-radius 10px

input[type=range]::-ms-fill-upper
	background #ddd
	border-radius 10px

input[type=range]::-ms-thumb
	border 1px solid #ddd
	height 16px
	width 16px
	border-radius 50%